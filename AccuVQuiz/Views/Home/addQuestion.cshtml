    <div id="addQuestionSize">
        <div class="content2">
            <div id="home">
                <div id="gone">
                    <div>
                        <text>
                            Select the company for which you want to add the questions.
                        </text>
                    </div>
                    <button style="width:100px; height:50px; font-size:20px;" type="button" id="AccuV" class="btn btn-primary" value="1">AccuV</button>
                    <button style="width:100px; height:50px; font-size:20px;" type="button" id="Nexius" class="btn btn-secondary" value="2">Nexius</button>
                    <button style="width:100px; height:50px; font-size:20px;"type="button" id="Velex" class="btn btn-success" value="3">Velex</button>
                    <button style="width:100px; height:50px; font-size:20px;"type="button" id="VelexSI" class="btn btn-danger" value="3">VelexSI</button>
                    <button style="width:100px; height:50px; font-size:20px;"type="button" id="Intelgica" class="btn btn-warning" value="4">Intelgica</button>
                    <button style="width:100px; height:50px; font-size:20px;"type="button" id="MyndCo" class="btn btn-info" value="5">MyndCo</button>
                </div>

                
                    <div id="questionAdd">
                        <div id="textbox_padding">
                            Question
                            <div class="colour">
                                <input id="question" style="width: 400px; height: 75px;" type="text" placeholder="Add question" required>
                            </div>
                            First Option
                            <div class="colour">
                                <input id="option1" type="text" placeholder="Add option" required>
                            </div>
                            Second Option
                            <div class="colour">
                                <input id="option2" type="text" placeholder="Add option" required>
                            </div>
                            Third Option
                            <div class="colour">
                                <input id="option3" type="text" placeholder="Add option" required>
                            </div>
                            Fourth Option
                            <div class="colour">
                                <input id="option4" type="text" placeholder="Add option" required>
                            </div>
                            Fifth Option
                            <div class="colour">
                                <input id="option5" type="text" placeholder="Add option" required>
                            </div>

                        </div>
                    


                </div>
                <div id="buttonPad">
                    <button type="button" id="submit" style="width:100px; height:50px; font-size:20px;" class="btn btn-primary" onclick="location.href='@Url.Action("addQuestion", "Home")'">Add</button>



                    <button type="button" style=" height:50px; font-size:20px;" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Back to Start</button>

                </div>

            </div>
        </div>
    </div>